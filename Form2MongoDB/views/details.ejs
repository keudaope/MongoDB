<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/form.css">
    <title>Document</title>
</head>
<body>
    <div class="container">
    <form action="">
        <label for="reknro">Reknro:</label>
        <input type="text" value="<%= users.reknro%> "><br />
        <label for="nimi">Nimi: </label>
        <input type="text" value="<%= users.nimi %> "><br />
        <label for="email">Sähköposti:</label>
        <input type="text" value = "<%= users.email %>"><br />
        <label for="linja">Linja: </label>
        <input type="text" value = "<%= users.linja %>"><br />
        <a class="delete" data-doc="<%= users._id %>">Poista</a>
    </form>
</div>
<script>
    const roskis = document.querySelector('a.delete');
    roskis.addEventListener('click', (e) =>{
        const loppupiste = `data/${roskis.dataset.doc}`;
        fetch(loppupiste, {
            method: 'DELETE'
        })
            .then((response) => response.json())
            .then((data) => console.log(data))
            .catch(err => console.log(err));
    })
</script>
</body>
</html>